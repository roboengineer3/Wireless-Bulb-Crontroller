//In this project, we will control home automation via mobile application with over voice control.
//In this project, we will control light & Fan.

#define light 2
#define fan 3

void setup() {
  // put your setup code here, to run once:
  Serial.begin(9600);
  pinMode(light, OUTPUT);
  pinMode(fan, OUTPUT);
}

void loop() {
  // put your main code here, to run repeatedly:
  if(Serial.available() == 1)
  {
    String val = Serial.readString();
    Serial.println(val);
    if(val == "light turn on")
    {
      digitalWrite(light, HIGH);
    }
    if(val == "light turn off")
    {
      digitalWrite(light, LOW);
    }
    if(val == "fan turn on")
    {
      digitalWrite(fan, HIGH);
    }
    if(val == "fan turn off")
    {
      digitalWrite(fan, LOW);
    }
    if(val == "Turn off everythig ")
    {
      digitalWrite(light, HIGH);
      digitalWrite(fan, HIGH);
    }
    if(val == "Turn on everything")
    {
      digitalWrite(fan, LOW);
      digitalWrite(light, LOW);
    }
  }
}
